{
	"name": "vscode-extensio-flutter-bloc-architecture",
	"displayName": "Synvata Bloc Architecture Scaffolding",
	"description": "Add new feature easily with well structured directories (Bloc Architecture pattern)",
	"version": "1.0.3",
	"publisher": "Mateus Emanuel Araujo",
	"repository": {
		"type": "git",
		"url": "https://bitbucket.org/synvata/vscode-extension-flutter/src/master/"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"bloc-architecture",
		"dart",
		"flutter",
		"bloc",
		"state-management"
	],
	"activationEvents": [
		"onCommand:extension.bloc-architecture",
		"workspaceContains:**/pubspec.yaml"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.bloc-architecture-application-bloc",
				"title": "Bloc: New Application",
				"category": "Synvata Bloc Architecture",
				"icon": "assets/logo.png"
			},
			{
				"command": "extension.bloc-architecture-application-cubit",
				"title": "Cubit: New Application",
				"category": "Synvata Bloc Architecture",
				"icon": "assets/logo.png"
			},
			{
				"command": "extension.bloc-architecture-domain-data",
				"title": "New Domain + data",
				"category": "Synvata Bloc Architecture",
				"icon": "assets/logo.png"
			},
			{
				"command": "extension.bloc-architecture-datasource",
				"title": "New Datasource",
				"category": "Synvata Bloc Architecture",
				"icon": "assets/logo.png"
			},
			{
				"command": "extension.bloc-architecture-all",
				"title": "New Application + Domain + data",
				"category": "Synvata Bloc Architecture",
				"icon": "assets/logo.png"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "extension.bloc-architecture-application-bloc",
					"group": "blocArchitectureGroup@1",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "extension.bloc-architecture-application-cubit",
					"group": "blocArchitectureGroup@2",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "extension.bloc-architecture-domain-data",
					"group": "blocArchitectureGroup@3",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "extension.bloc-architecture-datasource",
					"group": "blocArchitectureGroup@4",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "extension.bloc-architecture-all",
					"group": "blocArchitectureGroup@5",
					"when": "explorerResourceIsFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn version-generate && yarn compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"version-generate": "ts-node version-auto-generate.ts"
	},
	"devDependencies": {
		"@types/change-case": "^2.3.1",
		"@types/glob": "^7.2.0",
		"@types/js-yaml": "^4.0.5",
		"@types/lodash": "^4.14.182",
		"@types/mkdirp": "^1.0.2",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/rimraf": "^3.0.2",
		"@types/semver": "^7.3.10",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.20.0",
		"fs-extra": "^10.1.0",
		"git-describe": "^4.1.1",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4",
		"vsce": "^2.10.0",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"change-case": "^4.1.2",
		"cz-conventional-changelog": "^3.3.0",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"mkdirp": "^1.0.4",
		"semver": "^7.3.7"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}